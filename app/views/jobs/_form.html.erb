<%= simple_form_for @job do |f| %>
  

  <div class="field">
    <%= f.input :title,label: '工作標題',:input_html => {:style=> 'width: 600px'}%>
    <%= f.label :occupation, '工作時間'%></br>
    <%= f.collection_radio_buttons :occupation, [['full-time', "full-time"] ,['part-time', 'part-time'],['contract', 'contract'],['internship', 'internship'],['other', 'other']], :first, :last,:input_html => {:style=> 'text-align: center'}%></br>
    <%= f.label :job_type, '工作類型' %></br>
    <%= f.collection_radio_buttons :job_type, [['web back-end', 'web back-end'] ,['web front-end', 'web front-end'],['web-design', 'web-design'],['qa/testing', 'qa/testing'],['other', 'other']], :first, :last%></br>
    <%= f.input :company_name,label: '公司名稱',:input_html => {:style=> 'width: 600px'} %>
    <%= f.input :url,label: '公司網站',:input_html => {:style=> 'width: 600px'} %>
    <%= f.input :location,label: '公司地址',:input_html => {:style=> 'width: 600px'} %>
    <%= f.input :description,label: '工作內容',:input_html => {:style=> 'width: 600px'} %>
    <%= f.input :apply_information,label: '備註資訊',:input_html => {:style=> 'width: 600px'} %>
    <%= f.date_select :deadline ,label: '截止日期',control_col: "col-sm-2"%></br></br>
    <%= f.button :submit ,'完成'%></br>
  </div>
  

 

<% end %>
